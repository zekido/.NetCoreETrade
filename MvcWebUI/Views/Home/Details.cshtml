@using MvcWebUI.Entity
@model Product


@{
    ViewBag.Title = "Details";
}






<div class="container mt-5">
    <!-- ürünler -->

    <div class="row pb-5">

        <div class="col-md-6">

            <img src="~/ETicaret/img/@Model.image" class="img-fluid rounded w-100">

        </div>

        <div class="col-md-6">

            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @if (Model.Stock > 0)
                    {
                        <span class="badge badge-primary">

                            Stokta var - @Model.Stock
                        </span>
                    }
                    else
                    {
                        <span class="badge badge-danger">

                            Stokta yok
                        </span>

                    }

                    <span class="product-number">

                        #654965


                    </span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="description">
                        <br>
                        @Model.Description
                        <br>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <br>
                    <h4 id="product-price">@Model.Price ₺</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @if (Model.Stock == 0)
                    {
                        <button id="addtocard" class="btn btn-success" disabled>
                            <i class="fa fa-cart-plus">
                                Add to card
                            </i>
                        </button>
                    }
                    else
                    {
                        <button id="addtocard" class="btn btn-success">
                            <i class="fa fa-cart-plus">
                                Add to card
                            </i>
                        </button>
                    }


                </div>
            </div>




        </div>

    </div>


