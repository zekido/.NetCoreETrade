@using MvcWebUI.Entity
@model IEnumerable<Category>

@{

    var selected = Url.RequestContext.RouteData.Values["id"];

}


<div class="list-group">

    @if (selected == null)
    {
        <a href="/Home/ProductList/" class="list-group-item list-group-item-action active">

            Tüm Kategoriler

        </a>
    }
    else
    {
        <a href="/Home/ProductList/" class="list-group-item list-group-item-action">

            Tüm Kategoriler

        </a>
    }


    @foreach (var cat in Model)
    {

        if (selected != null && cat.Id == int.Parse(selected.ToString()))
        {
            <a href="/Home/ProductList/@cat.Id" class="list-group-item list-group-item-action active">

                → @cat.CategoryName

            </a>
        }
        else
        {
            <a href="/Home/ProductList/@cat.Id" class="list-group-item list-group-item-action">

                → @cat.CategoryName

            </a>
        }








    }


</div>